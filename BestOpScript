local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

local Gui = Instance.new("ScreenGui", CoreGui)
Gui.IgnoreGuiInset = true
Gui.ResetOnSpawn = false

local Frame = Instance.new("Frame", Gui)
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)

local UIGradient = Instance.new("UIGradient", Frame)
UIGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(230, 180, 255)), -- Purple gradient
	ColorSequenceKeypoint.new(1, Color3.fromRGB(180, 130, 255))
}

local StartButton = Instance.new("TextButton", Frame)
StartButton.Size = UDim2.new(0, 220, 0, 70)
StartButton.Position = UDim2.new(0.5, -110, 0.5, -35)
StartButton.Text = "Start ðŸ’–"
StartButton.BackgroundColor3 = Color3.fromRGB(180, 130, 255) -- Purple color
StartButton.TextColor3 = Color3.new(1, 1, 1)
StartButton.Font = Enum.Font.GothamBold
StartButton.TextSize = 26
StartButton.BorderSizePixel = 0
StartButton.AutoButtonColor = true
Instance.new("UICorner", StartButton)

local function buttonScaleEffect(button)
	local scaleTween = TweenService:Create(button, TweenInfo.new(0.5, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out), {Size = UDim2.new(0, 240, 0, 80)})
	scaleTween:Play()
end

StartButton.MouseButton1Click:Connect(function()
	buttonScaleEffect(StartButton)
	local fade = Instance.new("Frame", Frame)
	fade.Size = UDim2.new(1, 0, 1, 0)
	fade.BackgroundColor3 = Color3.new(1, 1, 1)
	fade.BackgroundTransparency = 1
	local tween = TweenService:Create(fade, TweenInfo.new(1), {BackgroundTransparency = 0})
	tween:Play()
	tween.Completed:Wait()

	for _, v in pairs(Frame:GetChildren()) do
		if v:IsA("GuiObject") then v:Destroy() end
	end

	local UIGradient1 = UIGradient:Clone()
	UIGradient1.Parent = Frame

	local HeartBG = Instance.new("ImageLabel", Frame)
	HeartBG.Size = UDim2.new(1, 0, 1, 0)
	HeartBG.BackgroundTransparency = 1
	HeartBG.Image = "rbxassetid://6071575925"
	HeartBG.ImageTransparency = 0.8

	local Question = Instance.new("TextLabel", Frame)
	Question.Size = UDim2.new(1, 0, 0, 60)
	Question.Position = UDim2.new(0, 0, 0.25, 0)
	Question.Text = "Will you be my girlfriend? ðŸ’•"
	Question.Font = Enum.Font.GothamBold
	Question.TextSize = 32
	Question.TextColor3 = Color3.new(1, 1, 1)
	Question.BackgroundTransparency = 1
	Question.TextStrokeTransparency = 0.5
	Question.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

	local Yes = Instance.new("TextButton", Frame)
	Yes.Size = UDim2.new(0, 200, 0, 70)
	Yes.Position = UDim2.new(0.5, -210, 0.5, 30)
	Yes.Text = "Yes ðŸ’˜"
	Yes.BackgroundColor3 = Color3.fromRGB(180, 130, 255) -- Purple color
	Yes.TextColor3 = Color3.new(1, 1, 1)
	Yes.Font = Enum.Font.GothamBold
	Yes.TextSize = 26
	Instance.new("UICorner", Yes)

	local No = Instance.new("TextButton", Frame)
	No.Size = UDim2.new(0, 140, 0, 60)
	No.Position = UDim2.new(0.5, 70, 0.5, 35)
	No.Text = "No ðŸ˜¢"
	No.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
	No.TextColor3 = Color3.new(1, 1, 1)
	No.Font = Enum.Font.GothamBold
	No.TextSize = 22
	Instance.new("UICorner", No)

	-- Apply scale effect to buttons
	buttonScaleEffect(Yes)
	buttonScaleEffect(No)

	TweenService:Create(fade, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()

	Yes.MouseButton1Click:Connect(function()
		buttonScaleEffect(Yes)
		local fade2 = Instance.new("Frame", Frame)
		fade2.Size = UDim2.new(1, 0, 1, 0)
		fade2.BackgroundColor3 = Color3.new(1, 1, 1)
		fade2.BackgroundTransparency = 1
		fade2.ZIndex = 10
		fade2.Parent = Frame

		TweenService:Create(fade2, TweenInfo.new(1), {BackgroundTransparency = 0}):Play()
		wait(1)

		for _, v in pairs(Frame:GetChildren()) do
			if v:IsA("GuiObject") and v ~= fade2 then v:Destroy() end
		end

		local UIGradient2 = UIGradient:Clone()
		UIGradient2.Parent = Frame

		local Question2 = Instance.new("TextLabel", Frame)
		Question2.Size = UDim2.new(1, 0, 0, 60)
		Question2.Position = UDim2.new(0, 0, 0.25, 0)
		Question2.Text = "Are you sure? ðŸ’­"
		Question2.Font = Enum.Font.GothamBold
		Question2.TextSize = 32
		Question2.TextColor3 = Color3.new(1, 1, 1)
		Question2.BackgroundTransparency = 1
		Question2.TextStrokeTransparency = 0.5
		Question2.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

		local Yes2 = Instance.new("TextButton", Frame)
		Yes2.Size = UDim2.new(0, 200, 0, 70)
		Yes2.Position = UDim2.new(0.5, -210, 0.5, 30)
		Yes2.Text = "Yes ðŸ’˜"
		Yes2.BackgroundColor3 = Color3.fromRGB(180, 130, 255) -- Purple color
		Yes2.TextColor3 = Color3.new(1, 1, 1)
		Yes2.Font = Enum.Font.GothamBold
		Yes2.TextSize = 26
		Instance.new("UICorner", Yes2)

		local No2 = Instance.new("TextButton", Frame)
		No2.Size = UDim2.new(0, 140, 0, 60)
		No2.Position = UDim2.new(0.5, 70, 0.5, 35)
		No2.Text = "No ðŸ˜¢"
		No2.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
		No2.TextColor3 = Color3.new(1, 1, 1)
		No2.Font = Enum.Font.GothamBold
		No2.TextSize = 22
		Instance.new("UICorner", No2)

		-- Apply scale effect to new buttons
		buttonScaleEffect(Yes2)
		buttonScaleEffect(No2)

		TweenService:Create(fade2, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()

		Yes2.MouseButton1Click:Connect(function()
			local fadeOut = Instance.new("Frame", Frame)
			fadeOut.Size = UDim2.new(1, 0, 1, 0)
			fadeOut.BackgroundColor3 = Color3.new(1, 1, 1)
			fadeOut.BackgroundTransparency = 1
			fadeOut.ZIndex = 20
			fadeOut.Parent = Frame

			local fadeOutTween = TweenService:Create(fadeOut, TweenInfo.new(1), {BackgroundTransparency = 0})
			fadeOutTween:Play()
			wait(1)

			-- Destroy all elements after fade out
			for _, v in pairs(Gui:GetChildren()) do
				if v:IsA("GuiObject") then v:Destroy() end
			end
		end)

		No2.MouseButton1Click:Connect(function()
			-- Add your no button action here (e.g., a sound effect or animation)
		end)
	end)

	No.MouseButton1Click:Connect(function()
		-- Add your no button action here (e.g., a sound effect or animation)
		-- Optionally add code to destroy GUI or trigger another action
		for _, v in pairs(Gui:GetChildren()) do
			if v:IsA("GuiObject") then v:Destroy() end
		end
	end)
end)
